<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AILab1.Pages.TipPage">
    <ContentPage.Content>
        <StackLayout Padding="10, 0">

            <Label Text="{Binding Output, StringFormat='Wyjście = {0:F2}'}"
               HorizontalOptions="Center" />
            <Label Text="{Binding Staff, StringFormat='Staff = {0:F2}'}"
               HorizontalOptions="Center" />
            <Slider Value="{Binding Staff
                
                , Mode=TwoWay}" Maximum="10" Minimum="0"/>

            <Label Text="{Binding Food, StringFormat='Food = {0:F2}'}"
               HorizontalOptions="Center" />
            <Slider Value="{Binding Food, Mode=TwoWay}"  Maximum="10" Minimum="0"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>